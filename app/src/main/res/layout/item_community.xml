<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="0dp"
    app:cardBackgroundColor="@color/white"
    app:cardUseCompatPadding="true"
    app:cardElevation="0dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgHinhCommunity"
                android:scaleType="centerCrop"
                android:src="@drawable/img_banh_pho_mai"
                android:layout_width="match_parent"
                android:layout_height="218dp"/>

            <LinearLayout
                android:id="@+id/linearSaveCommunity"
                android:layout_gravity="right|bottom"
                android:layout_marginBottom="16dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/background_cor8_sowhite_stro1black_pad4_8"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtTymCommunity"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_pink"
                    android:layout_gravity="center_vertical"
                    android:text="Lưu lại"
                    android:layout_marginRight="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <ImageButton
                    android:id="@+id/ibtnTymCommunity"
                    android:layout_gravity="center_vertical|right"
                    android:background="@android:color/transparent"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/baseline_favorite_border_12"/>

            </LinearLayout>

        </FrameLayout>

        <LinearLayout
            android:paddingLeft="32dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:paddingRight="32dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/civAvatarCommunity"
                    android:layout_width="46dp"
                    android:background="@drawable/background_avatar"
                    android:src="@drawable/img_avatar_1"
                        android:layout_height="46dp"/>

                <LinearLayout
                    android:layout_marginLeft="8dp"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txtTenNguoiDungCommunity"
                        android:textSize="12sp"
                        android:textStyle="normal"
                        android:textColor="@color/primary_pink"
                        android:layout_gravity="center_vertical"
                        android:text="Minh Châu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/txtTenTieuDeCommunity"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary_pink"
                        android:layout_gravity="center_vertical"
                        android:text="Tôm nhồi khoai tây"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/txtNoiDungCommunity"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:textSize="14sp"
                android:textStyle="normal"
                android:textColor="@color/black"
                android:layout_gravity="center_vertical"
                android:text="Một bữa tối thật tuyệt vời."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtSoLikeCommunity"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_black_a80"
                    android:layout_gravity="center_vertical"
                    android:text="10"
                    android:layout_marginRight="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <ImageButton
                    android:layout_marginRight="24dp"
                    android:id="@+id/ibtnLikeCommunity"
                    android:layout_gravity="center_vertical|right"
                    android:background="@android:color/transparent"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/baseline_thumb_up_off_alt_12_black"/>

                <TextView
                    android:id="@+id/txtSoBinhLuanCommunity"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_black_a80"
                    android:layout_gravity="center_vertical"
                    android:text="2"
                    android:layout_marginRight="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <ImageButton
                    android:layout_marginBottom="-2dp"
                    android:id="@+id/ibtnBinhLuanCommunity"
                    android:layout_gravity="center_vertical|right"
                    android:background="@android:color/transparent"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/baseline_comment_12"/>

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>