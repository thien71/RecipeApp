<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailCommunityActivity">

    <LinearLayout
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:paddingRight="16dp"
        android:paddingLeft="0dp"
        android:weightSum="10"
        android:elevation="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/ibtnBackDetailCommunity"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:elevation="1dp"
            android:layout_gravity="center_vertical|left"
            android:src="@drawable/baseline_west_24" />

        <TextView
            android:id="@+id/txtTenTieuDeDetailCommunity"
            android:layout_weight="8"
            android:layout_gravity="center|center_vertical"
            android:gravity="center"
            android:text="Bài viết của "
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <LinearLayout
                android:outlineProvider="bounds"
                android:clipToOutline="true"
                android:elevation="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imgHinhDetailCommunity"
                        android:scaleType="centerCrop"
                        android:src="@drawable/img_banh_pho_mai"
                        android:layout_width="match_parent"
                        android:layout_height="218dp"/>
                </FrameLayout>

                <LinearLayout
                    android:paddingLeft="32dp"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:paddingRight="32dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/civAvatarDetailCommunity"
                            android:layout_width="46dp"
                            android:background="@drawable/background_avatar"
                            android:src="@drawable/img_banh_mi_cuon_xuc_xich"
                            android:layout_height="46dp"/>

                        <LinearLayout
                            android:layout_marginLeft="8dp"
                            android:layout_gravity="center_vertical"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/txtTenNguoiDungDetailCommunity"
                                android:textSize="12sp"
                                android:textStyle="normal"
                                android:textColor="@color/primary_pink"
                                android:layout_gravity="center_vertical"
                                android:text="Minh Châu"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:id="@+id/txtTenMonDetailCommunity"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/primary_pink"
                                android:layout_gravity="center_vertical"
                                android:text="Tôm nhồi khoai tây"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/txtNoiDungDetailCommunity"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"
                        android:textSize="16sp"
                        android:textStyle="normal"
                        android:textColor="@color/black"
                        android:layout_gravity="center_vertical"
                        android:text="Một bữa tối thật tuyệt vời."
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <LinearLayout
                        android:layout_gravity="center_vertical"
                        android:gravity="bottom"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/txtSoLikeDetailCommunity"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/primary_black_a80"
                            android:layout_gravity="center_vertical"
                            android:text="10"
                            android:layout_marginRight="8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <ImageButton
                            android:layout_marginRight="24dp"
                            android:id="@+id/ibtnLikeDetailCommunity"
                            android:layout_gravity="center_vertical|right"
                            android:background="@android:color/transparent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/baseline_thumb_up_off_alt_12_black"/>

                        <TextView
                            android:id="@+id/txtSoBinhLuanDetailCommunity"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/primary_black_a80"
                            android:layout_gravity="center_vertical"
                            android:text="2"
                            android:layout_marginRight="8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <ImageButton
                            android:layout_marginBottom="-2dp"
                            android:id="@+id/ibtnBinhLuanDetailCommunity"
                            android:layout_gravity="center_vertical|right"
                            android:background="@android:color/transparent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/baseline_comment_12"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:background="@color/white"
                android:id="@+id/rcvBinhLuanCommunity"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


</LinearLayout>